<div class="container mt-5 mx-auto">
  <div class="row">
    <div class="col-md-10 m-auto">

      <div class="card card-body my-2 drop-shadow">
        <h4 class="text-center"> Check Out </h4>
        <ul class="list-group">
          {{#each products}}
          <li class="list-group-item">
            <img src="{{productId.imageUrl}}" width="75" hight="75" style="object-fit: contain;">

            <span class="ml-5">{{productId.title}}</span>
            <span class="float-right ml-2 badge badge-primary">{{qty}}</span>
            <span class="float-right ml-2 ">{{productId.price}}</span>
          </li>
          {{/each}}
        </ul>
      </div>
      <h4 class="text-center"> Total: {{total}} </h4>
    </div>
  </div>
</div>

<div style="display: flex; width: 100%; justify-content: center;">
  <form action="/orders" method="POST">
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key={{s_key}}
      data-amount="{{stripeAmount}}" data-name=" Your Total" data-description="" data-image="" data-locale="auto"
      data-zip-code="true" data-currency="usd">
      </script>
  </form>
</div>