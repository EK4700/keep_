

<div class="container col-md-3 mt-5">
  {{#if errorMessage}}
    <div class="msg error">
        {{errorMessage}}
    </div>
  {{/if}}
  <form action="/reset" method="POST"class="card card-body mb-3 drop-shadow">
    <h2 class="text-center"> Reset Password </h2>
    <div class="form-group">
      <input type="email" class="form-control" name="email" placeholder="Email">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg btn-block">Reset</button>
    </div>
  <p class="text-center small">Have a password <a href="/login"> login here!</a></p>
  </form>
  <p class="text-center small">Don't have an account <a href="/signup"> Sign up here!</a></p>


</div>