<section class="container mt-5">
     {{#if errorMessage}}
    <div class="msg error">
        {{errorMessage}}
    </div>
  {{/if}}
    <form action="/document/{{#if editMode}}edit-document{{else}}add-document {{/if}}" method="POST" class="p-4 bg-dark card"
        style="box-shadow: 2px 2px 20px rgba(0,0,0,0.4);" enctype="multipart/form-data">
        <h1 class="text-light text-center my-2">{{#if editMode}} Edit Product{{else}} ADD Product {{/if}} </h1>
        <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Document Title" value="{{document.title}}">
        </div>
        <div class="form-group text-center">
            <button class="btn btn-main" type="button" id="image-Btn"> Add Document</button>
        </div>
        <div class="form-group">
            <textarea name="desc"class="form-control" placeholder="Document Description">
                {{#if editMode}} {{document.desc}}{{/if}}
            </textarea>
        </div>
        {{#if editMode}}
        <input type="hidden" name="id" value="{{document.id}}">
        {{/if}}

        <div class="form-group text-center">
            <button type="submit" class="btn btn-warning">{{#if editMode}} EDIT {{else}} ADD {{/if}} </button>
        </div>
         <input type="file" id="filePicker" name="image" class="form-control" style="display:none">
    </form>
</section>

<script>
    document.getElementById('image-Btn').addEventListener('click', ()=>{
        document.getElementById('filePicker').click()
    })
</script>
